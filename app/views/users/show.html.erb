<div class="banner-show-user">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
          <h1 class="show-user text-center mb-3">My office spaces</h1>
          <% @offices.each do |office| %>
          <%= link_to office_path(office) do %>
            <div class="card mt-1 bg-transparent" style="width: 500px;">
              <div class="card-body">
                <div class="row">
                  <div class="col-5">
                    <%= cl_image_tag office.photo.key, height: 180, width: 180, crop: :fill %>
                  </div>
                  <div class="col-7">
                    <div class="card-header font-weight-bold"><%=  office.name %></div>
                    <ul class="list-group list-group-flush">
                      <li class="list-group-item bg-transparent"> <%= office.address %></li>
                      <li class="list-group-item bg-transparent"> <%= office.price %></li>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
            <% end %>
          <% end %>
      </div>
      <div class="col-md-6">
          <h1 class="show-user text-center mb-3">My bookings</h1>
          <% @bookings.each do |booking| %>
            <%= link_to booking_path(booking) do %>
              <div class="card mt-1" style="width: 500px;">
                <div class="card-body">
                  <div class="row">
                    <div class="col-6">
                      <%= cl_image_tag booking.office.photo.key, height: 160, width: 160, crop: :fill %>
                    </div>
                    <div class="col-6 text-right">
                      <%= link_to 'Delete booking', booking_path(booking), method: :delete, data: {confirm: "Do you REALY want to delete this review?"} %>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-12">
                      <div class="card-header font-weight-bold"><%= booking.office.name %></div>
                      <ul class="list-group list-group-flush">
                        <li class="list-group-item"> <%= booking.office.address %></li>
                        <li class="list-group-item"> <%= booking.office.price %></li>
                      </ul>
                    </div>
                  </div>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
      </div>
    </div>
  </div>
</div>
