<!-- Searchbar -->
  <div class="row search-row homesearch">
      <div>
        <form action="" method="get">
          <div class="product-search">
            <div class="search-element">
              <label class="search-label">Location</label>
              <input class="search-input" type="text" placeholder="Where ?" class="" autocomplete="on" name="location">
            </div>
            <div class="search-element">
              <label class="search-label">Environment</label>
              <input class="search-input" type="text" autocomplete="on" placeholder="Office types" name="query">
            </div>
            <div class="search-element">
              <label class="search-label">Dates</label>
              <input class="search-input" type="dates" autocomplete="on" placeholder="Add dates" name="dates">
            </div>
            <div class="search-element">
              <label class="search-label">Nb of desks</label>
              <input class="search-input" type="number" autocomplete="on" placeholder="Add Number" name="number">
            </div>
            <a type="submit" class="search-button">Search</a>
          </div>
        </form>
      </div>
    </div>
  <!-- End of searchbar -->

<!-- Map with Snazzymaps -->
<div class="container">
  <div class="div-block-149">
    <div class="html-embed-3 w-embed w-iframe">
      <iframe src="https://snazzymaps.com/embed/238471" width="100%" height="400px" style="border:none;">
      </iframe>
    </div>
  </div>
</div>
<!-- End of the map -->

<!-- Cards list -->
<div class="row no-gutters">
  <div class="col-sm-6 col-md-8">
    <div class="row">
      <% @meetingrooms.each do |meetingroom| %>
        <a href="/les-espaces-de-coworking-a-paris/kwerk" class="link-to-card-block">
          <div class="div-block-card">
            <img src="https://uploads-ssl.webflow.com/5dda416acd7d3707621e2feb/5e4ff237bdf7f33457a7c87f_kwerk1.jpg" alt="" class="brand-image-card">
            <div class="div-block-logo-card">
              <img src="https://uploads-ssl.webflow.com/5dda416acd7d3707621e2feb/5e4d2092a53ace9244b8c8ca_Kwerk%20logo.png" alt="" class="brand-logo-card">
            </div>
            <div class="title-card"><%= link_to meetingroom.name, meetingroom_path(meetingroom) %></div>
            <div class="address-card"><%= link_to meetingroom.address %></div>
            <div class="price-card"><%= link_to meetingroom.price %></div>
          </div>
        </a>
      <% end %>
    </div>
    <div class="col-6 col-md-4">
      <div id="map" data-markers="<%= @markers.to_json %>"  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>" ></div>
    </div>
  </div>
</div>
<!-- End of Cards list -->
